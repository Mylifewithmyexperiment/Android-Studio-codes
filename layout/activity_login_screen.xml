<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginScreen">


    <ImageView
        android:id="@+id/homebanner_background"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/home_banner" />


    <ImageView

        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_launcher"
         />

    <TextView
        android:id="@+id/Jio_Secure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jio_Secure"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="30sp"
        android:textStyle="italic"
        android:textColor="#FFFFFF"
        android:layout_below="@id/imageView3"
        android:layout_centerHorizontal="true"

        />

    <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_below="@id/Jio_Secure"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="9dp">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/msg_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_launcher"
/>

    <EditText
        android:id="@+id/phone_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/msg_icon"
        android:layout_alignStart="@id/msg_icon"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:ems="10"
        android:hint="@string/enter_mob_no_hint"
        android:inputType="phone"
        android:maxLength="10" />


    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_no"
        android:background="@drawable/round_button"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:text="@string/login"
        android:textColor="#FFFFFF" />

    <ProgressBar
        android:id="@+id/simple_progressBar"
        android:layout_below="@id/login_button"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility ="invisible"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:layout_marginTop="15dp"
        />



</RelativeLayout>


 </android.support.v7.widget.CardView>





</RelativeLayout>

