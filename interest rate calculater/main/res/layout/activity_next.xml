<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.wordpress.sjatyourservice.interestratecalculator.next">

    <EditText
        android:id="@+id/edprincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="Enter Principal Amount"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/edrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edprincipal"
        android:layout_below="@+id/edprincipal"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Enter Rate"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/edtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edrate"
        android:layout_below="@+id/edrate"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Enter Time in Months"
        android:inputType="textPersonName"
        />

    <Button
        android:id="@+id/btcalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtime"
        android:layout_below="@+id/edtime"
        android:layout_marginStart="62dp"
        android:layout_marginTop="57dp"
        android:text="calculate"/>

    <TextView
        android:id="@+id/tvresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtime"
        android:layout_below="@+id/btcalculate"
        android:layout_marginStart="15dp"
        android:layout_marginTop="58dp"
        android:text=" "/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5278704802151871/7045684224"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>