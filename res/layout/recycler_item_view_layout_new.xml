<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#AEB6B6"
    android:minHeight="100dp">


    <ImageView
        android:id="@+id/title_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:src="@drawable/reddit_icon" />

    <TextView
        android:id="@+id/title_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/title_image"
        android:layout_toEndOf="@id/title_image"
        android:maxLines="2"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title_subheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_heading"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/title_image"
        android:layout_toEndOf="@id/title_image"
        android:textSize="18sp" />


    <TextView

        android:id="@+id/main_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_subheading"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"

        android:textSize="30sp" />

    <TextView

        android:id="@+id/sub_reddit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_heading"
        android:layout_marginTop="10dp"
        android:text="@string/subreddit"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/layout_for_like_comment_share"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/sub_reddit"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/like_up_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/up_icon_png" />

        <TextView
            android:id="@+id/link_count"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            />

        <ImageView
            android:id="@+id/like_down_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/down_arrow" />





        <ImageView
            android:id="@+id/comment_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:src="@drawable/comment_icon" />

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:text="@string/comment_number" />





        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/share" />

        <TextView
            android:id="@+id/share_text"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:text="@string/share" />


    </LinearLayout>


</RelativeLayout>